@page
@model AbbyWeb.Pages.Categories.CreateModel
@{
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h3 class="text-primary pl-3">Create Category</h3>
            
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
             <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        <a asp-page="Index"  class="btn btn-primary" style="width:150px;"><i class="bi bi-arrow-left-circle"></i> Back</a>

    </div>

</form>

@section scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}